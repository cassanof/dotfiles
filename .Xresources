!!! URxvt Settings Below - must install urxvt-perls package for some stuff
! font comes with the nerd-fonts-complete package from the AUR
URxvt.font: xft:Inconsolata Nerd Font Mono:size=16, \
            xft:NotoEmoji Nerd Font Mono:size=16, \
            xft:FontAwesome:size=16, \
            xft:icomoon:size=16, \
            xft:octicons:size=16

URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 24
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false

!! Common Keybinds for Navigations (M is alt)
URxvt.keysym.M-k: command:\033]720;1\007
URxvt.keysym.M-j: command:\033]721;1\007
URxvt.keysym.Control-k: \033[1;5A
URxvt.keysym.Control-j: \033[1;5B
URxvt.keysym.Control-l: \033[1;5C
URxvt.keysym.Control-h: \033[1;5D

!! Copy Paste & Other Extensions
URxvt.perl-ext-common: default,clipboard,font-size,url-select,fullscreen,ibeamcursor 
! fullscreen, font-size and ibeamcursor are custom extensions
! that need to be put in ./urxvt/ext/
! other extensions come with the urxvt-perls package
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: brave
URxvt.url-select.underline: true
URxvt.url-select.button: 2

!! Fullscreen - Alt + f
! must install wmctrl package
URxvt.keysym.M-f: perl:fullscreen:switch

!! Font size changer
URxvt.font-size.step: 2
URxvt.keysym.M-K: perl:font-size:increase
URxvt.keysym.M-J: perl:font-size:decrease
URxvt.keysym.M-R: perl:font-size:reset
